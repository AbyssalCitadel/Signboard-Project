from Student_Q import queue_of_students
from circle_linked_list  import Slide, CircularLinkedList

if __name__ == "__main__":
    # makes the circular linked list
    cll = CircularLinkedList()

    # adds 20 slides
    for i in range(1, 21):
        cll.add_slide(i)

    # displays the slides for 2 cycles
    cll.display_slides(cycles=2)

    last_slide_seen = 1

    # prints what slides the student saw
    for x in queue_of_students.students: 
        slides_seen = cll.simulate_cycling(display_time=20, view_time= x.expose_time, last_slide_seen= last_slide_seen)
        print("\nSlides Seen by the Student:", slides_seen)
        last_slide_seen = slides_seen.pop()
